// Place your key bindings in this file to overwrite the defaultsauto[]
[
    {
        "key": "ctrl+delete",
        "command": "workbench.action.terminal.deleteWordRight",
        "when": "terminalFocus"
    },
    {
        "key": "alt+delete",
        "command": "-workbench.action.terminal.deleteWordRight",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+delete",
        "command": "deleteWordRight",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "alt+delete",
        "command": "-deleteWordRight",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "alt+delete",
        "command": "extension.deleteCamelRightCommand",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+delete",
        "command": "-extension.deleteCamelRightCommand",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+delete",
        "command": "deleteRight",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "ctrl+delete",
        "command": "-deleteRight",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "alt+backspace",
        "command": "extension.deleteCamelLeftCommand",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+backspace",
        "command": "-extension.deleteCamelLeftCommand",
        "when": "editorTextFocus"
    }
]